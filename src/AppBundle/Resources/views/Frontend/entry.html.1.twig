{% extends "::base.html.twig" %}

{% block title %}AppBundle:Blog:entry{% endblock %}

{% block body %}
<div class="container">
 <div class="blog-header">
     <h1 class="blog-title">Blog tutorial</h1>
     <p class="lead blog-description">A basic description of the blog, built in Symfony, styled in Bootstrap 3, and secured by <a href="http://auth0.com">Auth0</a>.</p>
 </div>

 <div class="row">
     <div class="col-sm-8 blog-main">
         <div class="blog-post">
             <h2 class="blog-post-title">{{ post.title }}</h2>
             <p class="blog-post-meta">
                {{ post.createdDate|date('F j, Y') }} by <a href="{{ path('user', {'name': post.user.name|url_encode }) }}">
                    {{ post.user.name }}
                </a>
            </p>
             <h3>Description:</h3>
             <p>{{ post.description|raw }}</p>

             <h3>Body:</h3>
             <p>{{ post.text|raw }}</p>
         </div>
     </div>
 </div>
</div>
{% endblock %}
